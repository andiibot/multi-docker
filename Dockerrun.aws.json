{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions":[
    {
      "name": "client",
      "image": "andiibot/multi-client",
      "hostname ": "client",
      "essential": false,
      "memory": 128
    },
    {
      "name": "server",
      "image": "andiibot/multi-server",
      "hostname ": "api",
      "essential": false,
      "memory": 128
    },
    {
      "name": "worker",
      "image": "andiibot/multi-worker",
      "essential": false,
      "hostname": "worker",
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "andiibot/multi-nginx",
      "hostname": "nginx",
      "essential": true,      
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client", "server"],
      "memory": 128
    }
  ]
}
